<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@+id/main_container"
	>   
  
    

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/scrollView1"
        android:minHeight = "25px"
        android:minWidth = "25px"
        >
        
          <RelativeLayout
      
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
	
		>
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="280dp"
		android:scaleType="fitCenter"
		android:src="@drawable/mainbg"
		android:layout_marginBottom="30dp"
		android:id="@+id/img_bg" /> 
	<RelativeLayout
      
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:padding="50dp"
		android:layout_below="@+id/img_bg"
		android:id="@+id/main_form"
				>
		<Button
			android:text="Войти"
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:layout_marginTop="20dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:background="@drawable/button_stili"
			android:id="@+id/btn_auth_form" />
		<Button
			android:text="Создать аккаунт"
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:layout_marginTop="20dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:background = "@drawable/activity_stili"
			android:layout_below="@+id/btn_auth_form"
			android:id="@+id/btn_reg_form" />
        
      
	</RelativeLayout>
    </RelativeLayout>
        </ScrollView>

  
</RelativeLayout>